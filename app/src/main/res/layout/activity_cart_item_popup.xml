<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="상세 정보"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#E9BD15"
            android:layout_width="match_parent"
            android:layout_height="53dp" />
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/popup_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:id="@+id/popup_prod"
            android:textSize="15sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:gravity="center"
            android:layout_marginHorizontal="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/popup_conv"
            android:textSize="15sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:gravity="center"
            android:layout_marginHorizontal="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!-- Notice -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <Button
            android:id="@+id/popup_cancel_button"
            android:text="취소"
            android:textSize="15sp"
            android:textColor="#E9BD15"
            android:padding="16dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:onClick="onClickCancel"/>
        <Button
            android:id="@+id/popup_delete_button"
            android:text="장바구니에서 삭제"
            android:textSize="15sp"
            android:textColor="#E9BD15"
            android:padding="16dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:onClick="onClickDelete"/>
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>
