<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mypageiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_margin="10dp">

        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mypagetv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/com_kakao_profile_userId"
                android:layout_marginLeft="5dp"
                android:layout_margin="10dp"
                android:layout_weight="1">
            </TextView>
            <TextView
                android:id="@+id/star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="textview"
                android:drawableLeft="@drawable/ic_baseline_star_24"
                android:drawablePadding="2dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 쿠폰"
                android:layout_gravity="center"
                android:layout_margin="10dp"></TextView>

            <Button
                android:id="@+id/mypage_coupon_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"></Button>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/my_coupon_image1"
                    android:layout_width="120dp"
                    android:layout_height="120dp">
                </ImageView>
                <ImageView
                    android:id="@+id/my_coupon_image2"
                    android:layout_width="120dp"
                    android:layout_height="120dp">
                </ImageView>
                <ImageView
                    android:id="@+id/my_coupon_image3"
                    android:layout_width="120dp"
                    android:layout_height="120dp">
                </ImageView>
                <ImageView
                    android:id="@+id/my_coupon_image4"
                    android:layout_width="120dp"
                    android:layout_height="120dp">
                </ImageView>
                <ImageView
                    android:id="@+id/my_coupon_image5"
                    android:layout_width="120dp"
                    android:layout_height="120dp">
                </ImageView>
            </LinearLayout>


        </HorizontalScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장바구니"
                android:layout_gravity="center"
                android:layout_margin="10dp"></TextView>

            <Button
                android:id="@+id/add_to_cart_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"></Button>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cartList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

</LinearLayout>